<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nosotros</title>
    <link rel="stylesheet" href="~/Estilos/style.css">
</head>

<body>
    <div class="dropdown position-fixed bottom-0 end-0 mb-3 me-3 bd-mode-toggle" style="display:none">
        <button class="btn btn-bd-primary py-2 dropdown-toggle d-flex align-items-center" id="bd-theme" type="button"
                data-bs-toggle="dropdown">
            <i class="bi bi-sun-fill my-1 theme-icon-active" width="1em" height="1em" id="add"></i>
            <i class="bi bi-moon-fill my-1 theme-icon-active" width="1em" height="1em" style="display:none" id="remove"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="bd-theme-text">
            <li>
                <button type="button" class="dropdown-item d-flex align-items-center" onclick="Removefav()" id="item2">
                    <i class="bi bi-sun-fill me-2 opacity-50 theme-icon" width="1em" height="1em"></i>
                    Light
                </button>
            </li>
            <li>
                <button type="button" class="dropdown-item d-flex align-items-center" onclick="FavId()" id="item1">
                    <i class="bi bi-moon-fill me-2 opacity-50 theme-icon" width="1em" height="1em"></i>
                    Dark
                </button>
            </li>
        </ul>
    </div>

    <header>
        <nav id="nav" style="background-color: seagreen;" class="navbar navbar-expand-lg navbar-light fixed-top"
             aria-label="Offcanvas navbar large">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="TrabajoFinal" asp-action="Index">
                    <img style="filter: contrast(185%);
          -webkit-filter: contrast(185%);
          -moz-filter: contrast(185%);" src="~/Imagenes/logo.ico" width="40" height="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar2"
                        aria-controls="offcanvasNavbar2" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasNavbar2"
                     aria-labelledby="offcanvasNavbar2Label">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbar2Label">USIL - MARKETPLUS</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                                aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="TrabajoFinal" asp-action="Index"
                                   style="color: white; text-decoration: none; font-size: 17px;">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="TrabajoFinal" asp-action="Contactanos"
                                   style="color: white; text-decoration: none ; font-size: 17px;">Contáctanos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold active" asp-controller="TrabajoFinal" asp-action="Nosotros"
                                   style="color: white; text-decoration: none ; font-size: 17px;">Nosotros</a>
                            </li>
                            <li class="nav-item dropdown d-flex mt-3 mt-lg-0">
                                <button style="background-color: skyblue;" class="button dropdown-toggle btn btn-sm fw-bold"
                                        id="form-open" data-bs-toggle="dropdown" aria-expanded="false">
                                    <a style="color: black; font-size: 20px" id="btn">Entrar</a>
                                </button>

                                <ul class="dropdown-menu">
                                    <li>
                                        <a id="entrar2" class="dropdown-item fw-bold" style="font-size: 17px" asp-controller="Inicio" asp-action="IniciarSesion">Login</a>
                                    </li>
                                    <li>
                                        <a id="entrar3" class="dropdown-item fw-bold" style="font-size: 17px"
                                           asp-controller="Access" asp-action="Login">Admin</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="my-3 container">
        <div class="row" data-aos="fade-up">
